<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geotechpy.geostock" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StockTypeActivity"
            android:label="@string/title_activity_stock_type" >
        </activity>
        <activity
            android:name=".StockListActivity"
            android:label="@string/title_activity_stock_list" >
        </activity>
        <activity
            android:name=".StockZoneListActivity"
            android:label="@string/title_activity_stock_zone_list" >
        </activity>
        <activity
            android:name=".ItemListActivity"
            android:label="@string/title_activity_item_list" >
        </activity>
    </application>

</manifest>
